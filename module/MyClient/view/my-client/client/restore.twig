{% extends 'layout/layout.twig' %}
{% import 'macros/forms.twig' as forms %}

{% block content %}
    <h1>Are you sure that you want to restore {{ client.name }} with id: {{ client.id }}?</h1>

    <form method="post" action="{{ url('clients', {'action': 'restore', 'id': client.id}) }}">
        {{ forms.input('id', client.id, 'hidden') }}
        {{ forms.input('res', 'Yes', 'submit') }}
        {{ forms.input('res', 'No', 'submit') }}
    </form>
{% endblock content %}
