{% extends 'layout/layout.twig' %}
{% import 'macros/forms.twig' as forms %}

{% block content %}
    <h1>Are you sure that you want to delete {{ firm.name }} with id: {{ firm.id }}?</h1>

    <form method="post" action="{{ url('firms', {'action': 'delete', 'id': firm.id}) }}">
        {{ forms.input('id', firm.id, 'hidden') }}
        {{ forms.input('del', 'Yes', 'submit') }}
        {{ forms.input('del', 'No', 'submit') }}
    </form>
{% endblock content %}
